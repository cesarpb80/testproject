FROM node:16.13.0-alpine3.14
WORKDIR /app
RUN apk add --upgrade apk-tools
COPY node_modules ./node_modules
COPY package.json ./
COPY .next ./.next
COPY public ./public
COPY pages ./pages
COPY next.config.js ./
COPY i18n.json ./
COPY .env ./
RUN adduser -s /bin/true -D -h /app app \
  && chown -R app /app \
  && chmod 700 /app
USER app
EXPOSE 3090
CMD ["npm", "start"]